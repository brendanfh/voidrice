# This tmux statusbar config was created by tmuxline.vim
# on Mon, 11 Nov 2019

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#FFFFFF,bg=#303030"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#0A7ACA"
set -g status-style "none,bg=#262626"
set -g message-style "fg=#FFFFFF,bg=#303030"
set -g pane-border-style "fg=#303030"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none,fg=#0A7ACA,bg=#262626"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#FFFFFF,bg=#262626"
set -g status-left "#[fg=#FFFFFF,bg=#0A7ACA,none] #S #[fg=#0A7ACA,bg=#303030,nobold,nounderscore,noitalics]#[fg=#FFFFFF,bg=#303030,none] #h  #(whoami)  #(uptime -p) #[fg=#303030,bg=#262626,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#303030,bg=#262626,nobold,nounderscore,noitalics]#[fg=#FFFFFF,bg=#303030] #(free --si -h | awk '/Mem:/ { print $3 }')  #(acpi | awk -F \"[ ,]\" '{ print $5 \" \" $7 }')  #(date \"+%d %b %Y\") #[fg=#0A7ACA,bg=#303030,nobold,nounderscore,noitalics]#[fg=#FFFFFF,bg=#0A7ACA] #(date \"+%H:%M\") "
setw -g window-status-format "#[fg=#262626,bg=#262626,nobold,nounderscore,noitalics]#[default] #I  #W #[fg=#262626,bg=#262626,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=#262626,bg=#303030,nobold,nounderscore,noitalics]#[fg=#FFFFFF,bg=#303030,none] #I  #W #[fg=#303030,bg=#262626,nobold,nounderscore,noitalics]"
