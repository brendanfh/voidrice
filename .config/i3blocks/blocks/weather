#!/bin/bash

. ~/.cache/wal/colors.sh

[ "stat -c %y /tmp/weatherreport | awk '{print $1}'" != "$(date '+%Y-%m-%d')" ] && getforecast

case $BLOCK_BUTTON in
	1) st -e less -d -S /tmp/weatherreport ;;
	3) ~/.scripts/getforecast ;;
esac

# Remove the weather icon, which is multiple bytes long
wtr="$(curl -s "https://wttr.in/?format=%c+%t+%m")"
#clr="$(echo "$wtr" | awk '{print $1}' | sed -r "s/â˜/#b1b1b1/;s/ðŸŒ«/#e0e0e0/;s/ðŸŒ§/#203060/;s/â„/#a0a0ff/;s/ðŸŒ¨/#a0a0ff/;s/ðŸŒ¦/#344e9e/;s/ðŸŒ§/#203060/;s/â›…/#c0c0c0/;s/â˜€/#e0fc0a/;s/ðŸŒ©/#000000/;s/â›ˆ/#8080dd/" 2>/dev/null)"

printf "$wtr\n\n"
printf "$color4"
