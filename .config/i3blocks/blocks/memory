#!/bin/bash

. ~/.cache/wal/colors.sh

case $BLOCK_BUTTON in
	1) notify-send "HIGH MEM PROCESSES:" \
		"$(ps axch -o cmd:15,%mem --sort=-%mem | head | xargs printf '%s %s%%\n')" ;;

	3) st -e htop ;;
esac


mem=$(free -m --si | awk '/^Mem:/ {print $3 " MB"}')
printf "ï‹› %s\n\n" "$mem"
printf "$color4"

