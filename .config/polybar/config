[module/battery]
type = custom/script
interval = 60

exec = "~/.scripts/bar/battery BAT0"

click-left = notify-send 'Battery info:' "$(acpi)"

format-underline="#30ef30"

[module/wifi]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #30ef30
label-connected = %essid%

format-disconnected = <label-disconnected>
label-disconnected = No Wifi
format-disconnected-underline = #ef3030

ramp-signal-0 = ï‡« 
ramp-signal-foreground = ${colors.foreground-alt}

[module/date]
type = custom/script
interval = 5

exec = "$HOME/.scripts/bar/calendar"

; TODO: ADD LEFT CLICK TO PRINT EVENTS
click-right = "st -e calcurse"

format-prefix = "ï³ "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}

[module/myweather]
type = custom/script
exec = $HOME/.scripts/bar/weather
interval = 3600000
tail = true

format-underline = ${colors.primary}

click-left = "st -e less -d -S /tmp/weatherreport"
click-right = $HOME/.scripts/getforecast

[module/powermenu]
type = custom/menu

expand-right = true

label-open = ï€‘ 
label-open-foreground = #ff0000
label-open-font = 1
label-close = cancel
label-close-foreground = #ff3030
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0
